<head>
  <meta charset="utf-8">
  <title>{{aletter.title}} â€“ Love Letter</title>

  <!-- bootstrap & Clean Blog Theme -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/startbootstrap-clean-blog@6.0.5/dist/css/clean-blog.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/custom.css">
</head>

<body>

<header class="masthead" style="background-image: url('/img/header-bg.jpg'); height: 200px;">
  <div class="container position-relative px-4 px-lg-5">
    <div class="site-heading text-center pt-5">
      <h1 class="text-white">{{aletter.title}}</h1>
      <span class="subheading text-white-50">A heartfelt message awaits...</span>
    </div>
  </div>
</header>


<div class="container my-5">
  <div class="card shadow mx-auto p-4" style="max-width: 700px;">

  
    <div class="mb-4">
      <h5><strong class="text-muted">To:</strong> {{aletter.recipient_username}}</h5>
      <h5><strong class="text-muted">Message:</strong></h5>
      <p class="ps-3" style="white-space: pre-wrap;">{{fullMessage}}</p>
    </div>

    <!-- song Preview Section -->
    {{#if aletter.song.title}}
    <section class="song-preview mt-4">
      <h4 class="text-center mb-3">ðŸŽµ Attached Song</h4>

      <div class="text-center mb-3">
        <p class="mb-1"><strong>{{aletter.song.title}}</strong> by {{aletter.song.artist}}</p>
      </div>

      <div class="d-flex justify-content-center align-items-center flex-wrap gap-3">
        <img src="{{aletter.song.artworkUrl}}" alt="Album Art" class="img-thumbnail" style="max-width: 150px;">
        <audio controls class="flex-grow-1" style="min-width: 250px;">
          <source src="{{aletter.song.previewUrl}}" type="audio/mpeg">
          Your browser does not support the audio tag.
        </audio>
      </div>
    </section>
    {{/if}}

  </div>
</div>

</body>
